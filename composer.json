{
    "name": "raffaelecarelle/php-error-insight",
    "description": "AI-powered helper for PHP errors, warnings and exceptions: practical, context-aware explanations and suggestions via local or API LLMs.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=7.4",
        "symfony/var-dumper": "^5.4"
    },
    "autoload": {
        "psr-4": {
            "ErrorExplainer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ErrorExplainer\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Raffaele Carelle",
            "email": "raffaele.carelle@gmail.com"
        }
    ],
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.86",
        "phpunit/phpunit": "^9.6"
    }
}
